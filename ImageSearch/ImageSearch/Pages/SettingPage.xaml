<Page x:Class="ImageSearch.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImageSearch.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">
    <Grid Margin="5">
        <TextBlock Text="設定" 
            Foreground="{DynamicResource TextFillColorPrimaryBrush}" 
            FontSize="30" FontWeight="Bold" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"/>

        <StackPanel Orientation="Vertical" Margin="0,50,0,0">
            <Border x:Name="Border_Theme"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                VerticalAlignment="Top"
                CornerRadius="5" 
                Margin="0,0,0,10">
                <Grid>
                    <ui:SymbolIcon VerticalAlignment="Center" HorizontalAlignment="Left"
                        Symbol="DarkTheme20"
                        FontSize="28" 
                        Margin="20"/>

                    <Grid VerticalAlignment="Center" Margin="60,0,0,0">
                        <TextBlock Text="主題"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            FontSize="18"
                            FontWeight="Bold"
                            Margin="0,0,0,15"/>

                        <TextBlock Text="請選擇你的主題風格"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            FontSize="12"
                            VerticalAlignment="Bottom"/>
                    </Grid>

                    <ComboBox x:Name="Themes" 
                        MinWidth="200" 
                        VerticalContentAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="20"
                        FontSize="14"
                        SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="System" />
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Dark" />
                    </ComboBox>
                </Grid>
            </Border>

            <Border x:Name="Border_UpdateDB"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            VerticalAlignment="Top"
            CornerRadius="5"
            Margin="0,0,0,10">
                <Grid>
                    <ui:SymbolIcon VerticalAlignment="Center" HorizontalAlignment="Left"
                        Symbol="Database16"
                        FontSize="28" 
                        Margin="20"/>

                    <Grid VerticalAlignment="Center" Margin="60,0,0,0">
                        <TextBlock Text="資料庫"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                FontSize="18"
                FontWeight="Bold"
                Margin="0,0,0,15"/>

                        <TextBlock Text="更新資料庫內容"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                FontSize="12"
                VerticalAlignment="Bottom"/>

                        <ui:Button x:Name="UpdateDBButton"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Content="更新"
                FontSize="14"
                FontWeight="Bold"
                Margin="0,0,20,0"
                Click="UpdateDBButton_Click"/>
                    </Grid>
                </Grid>
            </Border>

            <Border x:Name="Border_About"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                VerticalAlignment="Top"
                CornerRadius="5"
                Margin="0,0,0,10">
                <Grid>
                    <ui:SymbolIcon VerticalAlignment="Center" HorizontalAlignment="Left"
                        Symbol="AppGeneric20"
                        FontSize="28" 
                        Margin="20"/>

                    <Grid VerticalAlignment="Center" Margin="60,0,0,0">
                        <TextBlock Text="關於"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            FontSize="18"
                            FontWeight="Bold"
                            Margin="0,0,0,15"/>

                        <TextBlock Text="應用程式訊息"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            FontSize="12"
                            VerticalAlignment="Bottom"/>

                        <ui:Button x:Name="AboutButton"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Content="查看內容"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="0,0,20,0"
                            Click="AboutButton_Click"/>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>
